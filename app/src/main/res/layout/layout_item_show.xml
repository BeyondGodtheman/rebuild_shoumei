<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/w50"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="@dimen/h40" />

        <com.shoumei.xhn.widget.textView.IconTextView
            android:id="@id/tvIcon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="end"
            android:layout_margin="@dimen/w50"
            android:layout_toEndOf="@id/tvName"
            android:textColor="@color/gray9"
            android:text="@string/iconMore"
            android:textSize="@dimen/h40" />
    </RelativeLayout>

    <View
        android:layout_width="@dimen/w1030"
        android:layout_height="@dimen/h2"
        android:layout_marginStart="@dimen/w50"
        android:background="@color/grayE0" />
</LinearLayout>