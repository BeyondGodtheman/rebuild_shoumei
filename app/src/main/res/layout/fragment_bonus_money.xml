<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/w35"
        android:layout_marginLeft="@dimen/w40"
        android:layout_marginTop="@dimen/w35"
        android:text="今日现金红包池总金额"
        android:textColor="@color/red"
        android:textSize="@dimen/w43" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="¥"
            android:textColor="@color/red"
            android:textSize="@dimen/w80" />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/w10"
            android:gravity="center"
            android:text="0.00"
            android:textColor="@color/red"
            android:textSize="@dimen/w108"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>