<resources>
    <!-- Base application theme. -->
    <style name="SMTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/red</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/h140</item>
    </style>


    <style name="TitleText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/w55</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>


    <style name="Title.Icon">
        <item name="android:layout_width">@dimen/w55</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/gray9</item>
        <item name="android:textSize">@dimen/w52</item>
        <item name="android:gravity">center</item>
    </style>


    <!--输入框样式-->
    <style name="EidttextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/h175</item>
        <item name="android:textSize">@dimen/w44</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <!--手机号码输入框样式-->
    <style name="PhoneEidttextStyle" parent="EidttextStyle">
        <item name="android:maxLength">11</item>
        <item name="android:hint">@string/inputPhone</item>
        <item name="android:inputType">number</item>
        <item name="android:lines">1</item>
    </style>


    <!--验证码输入框样式-->
    <style name="CodeEidttextStyle" parent="PhoneEidttextStyle">
        <item name="android:hint">@string/inputCode</item>
        <item name="android:maxLength">6</item>

    </style>

    <!--密码输入框样式-->
    <style name="PassEdittextStyle" parent="PhoneEidttextStyle">
        <item name="android:maxLength">20</item>
        <item name="android:hint">@string/inputPassword</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:digits">0123456789qwertyuioplkjhgfdsazxcvbnmQWERTYUIOPLKJHGFDSAZXCVBNM
        </item>
    </style>

    <!--普通按钮样式-->
    <style name="ButtonStyle">
        <item name="android:background">@color/grayBtn</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/h128</item>
        <item name="android:textSize">@dimen/h48</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">@dimen/w30</item>
        <item name="android:layout_marginRight">@dimen/w30</item>
    </style>


    <!--验证码按钮样式-->
    <style name="CodeButtonStyle">
        <item name="android:text">@string/getCode</item>
        <item name="android:layout_width">@dimen/w317</item>
        <item name="android:layout_height">@dimen/h98</item>
        <item name="android:background">@drawable/timer_button_gray</item>
        <item name="android:textSize">@dimen/h40</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <!--菜单子条目view的样式表-->
    <declare-styleable name="ItemShowView">
        <attr name="nameText" format="string" />
        <attr name="valueText" format="string" />
    </declare-styleable>
</resources>
