<resources>
    <!-- Base application theme. -->
    <style name="SMTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/red</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/h140</item>
    </style>


    <style name="title_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/w55</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>


    <style name="title.icon">
        <item name="android:layout_width">@dimen/w55</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/gray9</item>
        <item name="android:textSize">@dimen/w52</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
